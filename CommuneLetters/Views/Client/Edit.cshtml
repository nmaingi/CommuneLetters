@model CommuneLetters.Models.Client

@{
    ViewData["Title"] = "Edit";
}
<section class="meat">
<h1>Edit</h1>

<hr />
<div>
    <div class="fill">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" ></div>
            <div class="form-group">
               
                <input placeholder="Your name" asp-for="Name" class="Name" />
                <span asp-validation-for="Name" ></span>
            </div>
            
            <div class="form-group">
               
                <textarea placeholder="Tell us about yourself" asp-for="Essay" class="Essay" spellcheck="true"></textarea>
                <span asp-validation-for="Essay" ></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="submit" />
            </div>
        </form>
    </div>
</div>

    </section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
