@model CommuneLetters.Models.Client

@{
    ViewData["Title"] = "AddClient";
}
<section class="meat">
<h2>Hello!</h2>

<h4>Tell Us about yourself</h4>
<hr />
<div>
    <div class="fill">
        <form asp-action="AddClient">
            <div asp-validation-summary="ModelOnly" ></div>
            
            <div class="Add-group">
                
                <input class="Name" placeholder="Your name" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="Add-group">
                
                <textarea placeholder="Tell us about yourself" asp-for="Essay" spellcheck="true" class="Essay"></textarea>
                <span asp-validation-for="Essay" ></span>
            </div>
            <div class="form-group">
           
                <input type="submit" value="Continue" class="submit" />

            </div>
        </form>
    </div>
</div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
