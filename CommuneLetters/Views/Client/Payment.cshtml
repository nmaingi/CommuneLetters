@{
    ViewData["Title"] = "Payment";
}
<h1>@ViewData["Title"]</h1>

<p><b>Please enter payment information</b></p>
<form>
    <!--Add styling, remove access to main and entry page-->
    <div class="form-group">
        <label for="Email">Email</label>
        <textarea name="Essay" rows="1" cols="50"></textarea>
    </div>

    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input name="Name" type="text" />
        &nbsp;&nbsp;
        <label for="LastName">Last Name</label>
        <input name="Name" type="text" />
    </div>

    <div class="form-group">
        <label for="Address">Address</label>
        <textarea name="Essay" rows="1" cols="50"></textarea>
    </div>

    <div class="form-group">
        <label for="City">City</label>
        <input name="Name" type="text" />
    </div>

    <div class="form-group">
        <label for="State">State</label>
        <input name="Name" type="text" />
        &nbsp;&nbsp;
        <label for="ZipCode">ZipCode</label>
        <input name="Name" type="text" />
    </div>

    <div>
        <input type="button" value="Submit" onclick="myFinalPage()" />
        <script>
            function myFinalPage() {
                window.location = "/user/FinalPage"
            }
        </script>

    </div>

</form>

